#include<iostream>
#include<cmath>
using namespace std;
int main(){
    FILE *a, *b;//обьявляем перемнную для файлов
    int z,x;
    a=fopen ("R.txt", "r");//открываем файл в режиме чтения r
    fscanf(a,"%d",&z);//берем целое число из этого файла, %d-берет только целое число из файла, &z-обращение  к значениям в памяти переменной z
    fclose(a);//закрываем файл
    for(int i=0; pow(3,i)<=z; i++ ){ //цикл который ищет максимальную степень числа 3 
        x = i;
    }
    
    b=fopen("stepen.txt", "w"); //открываем файл в режиме записи
    fprintf(b,"%d",x);//записываем в файл значение x
    fclose(b);//закрываем файл
    return 0;

   }
